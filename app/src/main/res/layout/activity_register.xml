<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="331dp"
        android:layout_height="157dp"
        android:contentDescription="@string/livechat_logo"
        android:enabled="false"
        android:src="@drawable/chat_main_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_user_firstname"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:allowUndo="false"
        android:alpha="0.62"
        android:autofillHints="name"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:enabled="true"
        android:hint="@string/first_name"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_username"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/register_user_email"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:allowUndo="false"
        android:alpha="0.62"
        android:autofillHints="@string/prompt_email"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:enabled="true"
        android:hint="@string/prompt_email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/register_user_lastname"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:allowUndo="false"
        android:alpha="0.62"
        android:autofillHints=""
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:enabled="true"
        android:hint="@string/last_name"
        android:imeOptions="actionDone"
        android:inputType="textAutoComplete"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_firstname"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/register_user_password"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:allowUndo="true"
        android:alpha="0.62"
        android:autofillHints="password"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:enabled="true"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_lastname"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/register_user_username"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:allowUndo="true"
        android:alpha="0.62"
        android:autofillHints="username"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:enabled="true"
        android:hint="@string/prompt_username"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_email"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/register_submit_user"
        android:layout_width="161dp"
        android:layout_height="54dp"
        android:layout_gravity="start"

        android:layout_marginTop="6dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded"
        android:enabled="true"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_password"
        app:layout_constraintVertical_bias="0.176" />

    <Button
        android:id="@+id/login_redirect_button"
        android:layout_width="161dp"
        android:layout_height="54dp"
        android:layout_gravity="start"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded"
        android:enabled="true"
        android:text="@string/have_an_account_login_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/livechat_application"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>