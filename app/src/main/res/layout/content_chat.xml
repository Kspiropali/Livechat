<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait" >


    <ScrollView
        android:id="@+id/scrollView1"
        android:focusableInTouchMode="true"
        android:scrollbarSize="0dp"
        android:scrollY="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="52dp"
        android:contentDescription="@android:string/yes">

        <LinearLayout
            android:id="@+id/chatMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <include-->
            <!--                android:id="@+id/others_message1"-->
            <!--                layout="@layout/others_message"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="top"-->
            <!--                android:layout_margin="@dimen/cardview_default_radius" />-->


        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/chatBoxMessage"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/fab_margin"
        android:autofillHints="none"
        android:background="@color/material_dynamic_neutral_variant80"
        android:hint="@string/type_a_message"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:maxLines="5"
        android:minHeight="48dp"
        app:layout_anchorGravity="center"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/cardview_default_radius"
        android:background="@drawable/send_button"
        android:contentDescription="@string/this_is_a_button"
        tools:ignore="RedundantDescriptionCheck" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>